@model TodoList.Models.TodoItem

@{
    ViewData["Title"] = "Create Todo Item";
}

<h1>Create New To-Do Item</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title">Name:</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Deadline">Deadline:</label>
        <input asp-for="Deadline" type="datetime-local" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>